{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "po_creation_form",
  "version": "0.1.0",
  "identifier": "com.mardens.pocreationform",
  "build": {
    "devUrl": "http://localhost:1420",

    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",

    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PO Creation Form",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false
        
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
