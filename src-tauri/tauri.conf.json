{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "po_creation_form",
  "version": "0.0.1",
  "identifier": "com.mardens.pocreationform",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PO Creation Form",
        "width": 1280,
        "height": 720,
        "minWidth": 1050,
        "minHeight": 600,
        "decorations": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
