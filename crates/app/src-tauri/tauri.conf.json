{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "po_tracker",
"version": "0.1.2",
  "identifier": "com.mardens.pocreationform",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PO Creation Form",
        "width": 1280,
        "height": 720,
        "minWidth": 1050,
        "minHeight": 600,
        "decorations": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "fileAssociations": [
      {
        "ext": [
          "pocf"
        ],
        "description": "Purchase Order Creation File",
        "role": "Editor",
        "mimeType": "application/x-pocf"
      }
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "http": {
      "scope": [
        "http://localhost:8522/api/**",
        "https://potracker.mardens.com/api/**"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Mardens-Inc/po-creation-form/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJFMDI3Q0MyMTNEMTJCMUEKUldRYUs5RVR3bndDdmtrYUd4Znp2dnpjamtRYWRDU3ZPdFFzKzFLR0VpelpqckUwWFpiVUtBRVUK"
    }
  }
}
